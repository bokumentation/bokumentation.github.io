---
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllProjects } from '@/lib/data-utils'

const projects = await getAllProjects()

import AuthorCard from '@/components/AuthorCard.astro'
import { getAllAuthors } from '@/lib/data-utils'

import teluIcon from '../assets/img/logotelu.jpg'
import unsIcon from '../assets/img/logouns.jpg'

const authors = await getAllAuthors()
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="About" />
  <Breadcrumbs items={[{ label: 'About', icon: 'lucide:info' }]} />

  <section>``
    <h1 class="mb-4 text-2xl font-medium">Meet the Author</h1>
    <div class="mb-4">
      {
        authors.length > 0 ? (
          <ul class="flex flex-col gap-4">
            {authors.map((author) => (
              <li>
                <AuthorCard author={author} />
              </li>
            ))}
          </ul>
        ) : (
          <p class="text-muted-foreground text-center">No authors found.</p>
        )
      }
    </div>
    <div class="prose">
      <p class="text-muted-foreground mt-0">The Original Name</p>
    </div>
  </section>

  <h1 class="text-2xl font-medium">Behind the Scene</h1>
  <div class="prose mb-4">
    <p class="text-muted-foreground mt-0">Cihuy</p>
  </div>

  <section>
    <div class="min-w-full border border-accent p-4 rounded-xl">
      <h2 class="mb-4 text-2xl font-medium">Publication</h2>
      <div class="flex flex-col gap-2" id="univ-1">
        <div class="flex flex-row justify-between">
          <h1>To-do-list</h1>
          <p>2024-2025</p>
        </div>
        <div class="text-muted-foreground flex flex-col">
          <p>Bulet bulet</p>
          <p>Bulet bulet</p>
          <p>Bulet bulet</p>
          <p>Bulet bulet</p>
        </div>
      </div>
    </div>
  </section>

  <section>
    <div class="min-w-full border border-accent p-4 rounded-xl">
      <h2 class="mb-4 text-2xl font-medium">Education Background</h2>
      <div class="mb-4" id="univ-1">
          <div class="flex flex-row justify-between">
          <div class="gap-4 flex flex-row w-full">
            <img class="size-12 rounded-lg" src={teluIcon.src}>
            <div> 
              <h1 class="">Telkom University</h1>
              <h2>D3 Technology Computer</h2>
            </div>
          </div>
          <p>2024-2027</p>
        </div>
        <div class="text-muted-foreground mt-2 flex flex-col">
          <p>To-do-list</p>
          <p>To-do-list</p>
          <p>To-do-list</p>
          <p>To-do-list</p>
        </div>
      </div>

      <div class="mb-4" id="univ-2">
        <div class="flex flex-row justify-between">
          <div class="gap-4 flex flex-row w-full">
            <img class="size-12 rounded-lg" src={unsIcon.src}>
            <div> 
              <h1 class="">Sebelas Maret University</h1>
              <h2>Biology Education (unfinished degree / dropout)</h2>
            </div>
          </div>
          <p>2022-2023</p>
        </div>
        <div class="text-muted-foreground mt-2 flex flex-col">
          <p>To-do-list</p>
          <p>To-do-list</p>
          <p>To-do-list</p>
          <p>To-do-list</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
