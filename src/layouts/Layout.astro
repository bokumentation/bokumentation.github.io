---
import '@/styles/global.css'
import '@/styles/typography.css'

import Footer from '@/components/Footer.astro'
import Head from '@/components/Head.astro'
import Header from '@/components/Header.astro'
import { SITE } from '@/consts'
import { cn } from '@/lib/utils'

interface Props {
  class?: string
}

const { class: className } = Astro.props
---

<!doctype html>
<html class="bg-background text-foreground" lang={SITE.locale}>
  <Head>
    <slot name="head" />
  </Head>

  <body>
    <div class="flex h-fit min-h-screen flex-col gap-y-0 font-sans">
      <!-- Top Bar Header -->
      <div>
        <Header />
      </div>
      
      <div
      class="bg-background/50 sticky top-0 z-50 divide-y backdrop-blur-sm xl:divide-none"
      >
        <!-- SUBPOST NAVIGATION -->
        <slot name="subposts-navigation" />
        <!-- TOC FOR MOBILE NOW ARE STICKY -->
        <slot name="table-of-contents" />
      </div>

      <!-- Main Content -->
      <main class="grow">
        <div
          class={cn('mt-4 mx-auto flex grow flex-col gap-y-2 px-4', className)}
        >
          <slot />
        </div>
      </main>

      <!-- Call Footer -->
      <Footer />
    </div>
  </body>
</html>
